<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/medico"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.italo.gestante.CadMedico"
    tools:showIn="@layout/activity_cad_medico">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbrar"/>

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/posit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <Button
                android:layout_marginTop="100dp"
                android:id="@+id/btnDataMedico"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_custon_doctor"
                android:textColor="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_person"
                android:textStyle="bold"/>
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btnDataDoc"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_custon_doctor"
                android:textColor="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:layout_below="@id/btnDataMedico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reg_medico"
                android:textStyle="bold"/>




        </LinearLayout>



    </ScrollView>





</RelativeLayout>
